---
extends: default

rules:
  braces:
    max-spaces-inside: 1
  commas:
    max-spaces-after: -1
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  document-start: false
  line-length:
    max: 220
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
